# ===== AWS 개발 환경 설정 템플릿 =====
# 이 파일을 복사하여 .env.dev로 이름을 변경하고 실제 값으로 변경하세요

# 환경 구분
APP_ENV=dev
DOCKER_TARGET=production
NODE_ENV=development

# 프로젝트 설정
COMPOSE_PROJECT_NAME=capstone-dev

# 포트 설정 (AWS App Runner/ECS)
BACKEND_PORT=8000
FRONTEND_PORT=3000
DB_PORT=5432

# Frontend 설정 (AWS 개발 도메인)
# 개발 환경 도메인 (예: dev.deepsentinel.cloud)
PRODUCTION_DOMAIN=your-dev-domain.com
NEXT_PUBLIC_API_URL=https://api.your-dev-domain.com
NEXT_PUBLIC_PRODUCTION_API_URL=https://api.your-dev-domain.com

# 데이터베이스 (AWS RDS 개발용)
POSTGRES_DB=capstone_dev
POSTGRES_USER=your_dev_db_user
POSTGRES_PASSWORD=YOUR_DEV_DB_PASSWORD_FROM_SECRETS_MANAGER

# JWT 설정 (개발용 - 실제로는 AWS Secrets Manager에서 관리)
SECRET_KEY=YOUR_DEV_SECRET_KEY_FROM_SECRETS_MANAGER
DEBUG=false
ALLOWED_HOSTS=your-dev-api-domain.com,localhost,0.0.0.0

# 데이터베이스 설정 (Django)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=capstone_dev
DB_USER=your_dev_db_user
DB_PASSWORD=YOUR_DEV_DB_PASSWORD_FROM_SECRETS_MANAGER
DB_HOST=your-dev-rds-endpoint.amazonaws.com
DB_PORT=5432

# AWS 설정 (실제 AWS 서비스)
USE_LOCALSTACK=false
AWS_DEFAULT_REGION=ap-northeast-2
AWS_ACCOUNT_ID=YOUR_AWS_DEV_ACCOUNT_ID

# S3 설정 (AWS 개발)
AWS_S3_BUCKET_NAME=capstone-dev-video-bucket
AWS_S3_REGION=ap-northeast-2

# S3 업로드 설정
AWS_S3_PRESIGNED_URL_EXPIRE=900  # 15분 (초 단위)
AWS_S3_DOWNLOAD_URL_EXPIRE=3600  # 1시간 (초 단위)

# SQS 설정 (AWS 개발)
AWS_SQS_QUEUE_URL=https://sqs.ap-northeast-2.amazonaws.com/YOUR_AWS_DEV_ACCOUNT_ID/video-processing-dev-queue
AWS_SQS_QUEUE_NAME=video-processing-dev-queue
AWS_SQS_VISIBILITY_TIMEOUT=300  # 5분
AWS_SQS_MESSAGE_RETENTION_PERIOD=1209600  # 14일

# JWT 설정 (비디오 업로드용)
JWT_UPLOAD_TOKEN_EXPIRE=3600  # 1시간 (초 단위)
JWT_USER_TOKEN_EXPIRE=604800  # 7일 (초 단위)

# ECR 설정
ECR_REGISTRY_URL=YOUR_AWS_DEV_ACCOUNT_ID.dkr.ecr.ap-northeast-2.amazonaws.com
ECR_REPOSITORY_BACKEND=capstone-dev-backend
ECR_REPOSITORY_FRONTEND=capstone-dev-frontend

# Secrets Manager
AWS_SECRET_NAME=capstone-dev-secrets

# 클라우드 서비스 활성화
USE_CLOUD_SERVICES=true

# AI 서비스 (ECS 개발환경)
AI_VIDEO_ANALYSIS_URL=https://your-dev-api-domain.com
AI_LANGGRAPH_URL=https://your-dev-langgraph-domain.com
AI_VIDEO_SUMMARY_URL=https://your-dev-summary-domain.com
