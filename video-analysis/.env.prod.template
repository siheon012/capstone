# Production environment template for memi_docker
# Do NOT commit real secrets to git. Inject values from your secret manager.

APP_ENV=prod
COMPOSE_PROJECT_NAME=capstone-prod
BACKEND_PORT=8000
FRONTEND_PORT=3000
DB_PORT=5432

# Database - use DATABASE_URL for simplicity in prod
DATABASE_URL=postgres://prod_user:PROD_PASSWORD@prod-db-host:5432/memi
# or set individual values
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=memi
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=

# Backend / event callback
DB_EVENTS_URL=https://backend.yourcompany.com/db/events
BE_AUTH_TOKEN=

# Video mounts
HOST_VIDEO_MOUNT=/data/videos
CONTAINER_VIDEO_MOUNT=/app/videos

# Model paths
VLM_PATH=/app/checkpoints/llava-fastvithd_0.5b_stage2
MIVOLO_CHECKPOINT=/app/models/model_imdb_cross_person_4.24_99.46.pth.tar
DETECTOR_WEIGHTS=/app/models/yolov8x_person_face.pt
MEBOW_CFG=/app/config/mebow.yaml

# Runtime
CUDA_VISIBLE_DEVICES=0
LOG_LEVEL=INFO
OUTPUT_DIR=/app/output

# AWS
AWS_DEFAULT_REGION=ap-northeast-2
AWS_S3_BUCKET_NAME=your-prod-video-bucket-name
S3_BUCKET_RAW=capstone-prod-raw
S3_BUCKET_THUMBNAILS=capstone-prod-thumbnails
AWS_BEDROCK_REGION=us-east-1
AWS_BEDROCK_VLM_MODEL=anthropic.claude-3-sonnet-20240229-v1:0
AWS_BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0
